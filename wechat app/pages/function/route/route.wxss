/* pages/function/spot/spot.wxss */

page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
image{
  width: 414px;
  height: 220px;
}

map{
  width: 414px;
  height: 400px;
}

swiper{
  width: 100%;
  height: 220px;
}

img{
  width: 100%;
  height: 100%;
}

.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #FFCC00;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #FFCC00;
}